{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "esnext",
    "allowJs": false,
    "declaration": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "lib"
  },
  "include": [
    "src/*.ts"
  ]
}
